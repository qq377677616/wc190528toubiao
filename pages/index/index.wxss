.layer{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.7);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.layer .grade-intro{
  height: 70%;
  width: 75%;
  margin: auto;
}

.layer .close{
  position: absolute;
  height: 106rpx;
  width: 106rpx;
  bottom: 4%;
}

.sprite{
  width: 187rpx;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: calc(50% - 93.5rpx);
}

.sprite image{
  height: 100%;
  width: 100%;
}
