/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.home-banner{
  height: 320rpx;
  /* background-color: #4e4af9; */
  width: 100%;
  position: relative;
}

.home-banner .bk {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: -1;
}

.home-banner .user {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #8f96fe;
  z-index: 100;
  border-radius: 50%;
  margin-left: 30rpx;
}

.home-banner .user image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.infomation {
  display: flex;
  align-items: center;
  color: #fff;
  padding-top: 40rpx;
}

.infomation .text{
  display: flex;
  margin-left: 26rpx;
  flex-direction: column;
}

.energy {
  display: flex;
  align-items: center;
  justify-content: center;
}

.energy .num {
  font-size: 32rpx;
  margin-left: 4rpx;
}

.infomation .text .btn{
  background-color: transparent;
  color: #dedffe;
  border:1px solid #dedffe;
  flex-grow: 0;
  font-size: 30rpx;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
  /* margin-top: 20rpx; */
}
.infomation .text .btn-i{
  background-color: transparent;

  flex-grow: 0;
  font-size: 30rpx;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
}
.btn-i-stu{color: #dedffe;border:1px solid #dedffe;}
.btn-i-stu-s{color: #20dd13; border:1px solid #20dd13;}

.progress {
  width: 100%;
  height: 10rpx;
  background-color: #dedffe;
  margin-top: 20rpx;
  border-radius: 5rpx;
  position: relative;
}

.progress .active {
  position: absolute;
  top: 0;
  left: 0;
  height: 10rpx;
  background-color: #37fb8f;
  border-radius: 5rpx;
}

.grade {
  position: absolute;
  right: 15rpx;
  /* margin-left: 20rpx; */
  height: 121rpx;
  width: 121rpx;

}
.grade-text {
  font-size: 32rpx;
}

.block {
  padding:0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #fff;
  justify-content: space-between;
  position: absolute;
  width: 100%;
  bottom: 30rpx;
  font-size: 30rpx;
}
.block .line{
  /*width: 33.3333%;*/
  display: flex;
  align-items: center;
  text-align: center;

  /* background-image: url('../../image/tab-bk.png') */
}
.block .line image{

  height: 38rpx;
  width: 38rpx;
  margin-right: 8rpx;
}
.content{
  height: calc(100% - 435rpx);
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.content .title {
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.content .title::before{
  content: '';
  height: 100%;
  width: 10rpx;
  background-color: #3163d2;
  position: absolute;
  top: 0;
  left: -20rpx;
}

.icard{
  /* margin: 20rpx 0;  */
  height: auto;
  border: 1px #dddee1 solid;
  border-top: 3px #5cadff solid;
  border-radius: 10rpx;
  margin: 30rpx;
  background: #f8f8f9
}

.card-title{
  padding: 20rpx;
    font-size: 28rpx;
    color: #495060
}

