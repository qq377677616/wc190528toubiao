.numx{
  position: absolute;
  top: 47%;
  left: 49%;
  transform: translate(-50%,-50%);
  color: #fff;
  font-size: 20rpx;
}
.numx text{
  font-size:36rpx;
  text-shadow:6rpx 6rpx 10rpx #000;
  font-weight: bold;
}
.lockx{
  display: inline-block;
  margin-left: 20rpx;
  /* margin-bottom: 20rpx; */
  height: 100rpx;
  position: relative;
  text-align: center;
}

.scroll_box{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}
.z-modal{
  position: fixed;width: 60%;height: 560rpx;top: calc(50% - 300rpx);left:20%;background: white;border-radius: 10px;text-align: center;z-index:1000
}
.z-modal .title{
  line-height: 60rpx;height: 60rpx;width: 100%;text-align: center;
}
.z-modal .cantent{
  padding: 20rpx;display: block;height: 200rpx;color: #606266;font-size: 28rpx
}
.z-modal .btn{
  position: absolute;height: 80rpx;line-height:80rpx;width: 100%;bottom: 0;display: flex;border-top:1px #E4E7ED solid
}
.z-modal .btn view{
  width: 100%;font-size: 28rpx;
}
