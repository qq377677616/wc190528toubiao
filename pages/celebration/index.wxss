/* pages/celebration/index.wxss */
.bg{
    width: 100vw;
    position: fixed;
    bottom: 0;
}
.activity{
    width: 80%;
    margin: 40rpx auto;
    border:1px #f5f5f5 solid;
    border-radius: 20rpx;
    padding:20rpx 30rpx;
    box-shadow:0 0 10px 3px rgba(0,0,0,.05);
}
.activity >view:nth-child(1){
    font-size: 40rpx;
}
.activity >view:nth-child(2){
    padding: 5px 0;
    font-size: 26rpx;
    color: #434445;
}
.activity >view:nth-child(3){
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
    color: #717273;
}
.activity-btn{
    background-color: #409EFF;
    border-radius: 10rpx;
    padding: 5rpx 40rpx;
    color: white;
    font-size: 28rpx;
}
.is-std{
    background-color: #67C23A !important;
}
